<div class="m-5">
<h3 class="text-center mb-5 text-primary">Your Requests</h3>

<% current_user.requests.each do |request| %>
  <div class="card mb-4 border-0 shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
      <h5 class="mb-0 text-secondary"><i class="fas fa-concierge-bell me-2"></i><%= request.service.category %></h5>
      <span class="badge <%= request.status == 'pending' ? 'bg-warning text-dark' : 'bg-success' %>">
        <%= request.status.capitalize %>
      </span>
    </div>
    <div class="card-body">
      <p class="card-text mb-3">
        <%= request.description %>
      </p>
      <div class="text-end">
        <a href="#" class="btn btn-outline-primary btn-sm">
          View Details <i class="fas fa-arrow-right ms-1"></i>
        </a>
      </div>
    </div>
  </div>
<% end %>

</div>
