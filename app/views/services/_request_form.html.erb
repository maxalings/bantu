<% if current_user %>
    <h2 class="almost-text">Interest about this service ?</h2>
    <%= simple_form_for([@service, @request]) do |f| %>
        <%= f.input :description, as: :text, label: "Write a short description of your needs",
        placeholder: "e.g. details, specificities, address if needed... ", input_html: { rows: 5, cols: 40, class:"custom-textaera" } %>
         <%= f.input :date, as: :string, label: raw("<i class='fa-regular fa-calendar'></i>  Select a date for this service to be done"), placeholder: 'pick a date', input_html:
         { data: { controller: "datepicker",
        datepicker_disable_dates_value: @disabled_dates.to_json,
        datepicker_date_format: "Y-m-d"
         }, type: "date",
         required: true, class:"custom-textaera incentive-text",
         min: Date.today.to_s
         },
         class:"custom-textaera" %>
        <div>
        <%= f.input :duration, as: :float, label: "Select the duration you need it", input_html: { type: "number", step: 0.5, min: 0.5, placeholder: "e.g. 1.5 for 1 hour and 30mn", class:"custom-textaera incentive-text" }, class:"custom-textaera"%>
        <div class="text-center">
        <%= f.submit "Send request", class:"btn btn-secondary me-3" %>
        <%= link_to "Back", services_path, class:"btn btn-primary" %>
        </div>
    <% end %>
<% else %>
    <div class="logsign-container">
        <h2>Interest about this service ?</h2>
        <h6>Then please login or sign up first</h6>
        <div class="d-flex mt-4">
    <%= link_to "Login", new_user_session_path, class:"logsign-btn btn rounded-pill align-self-start", style:"margin-right: 2px" %>
    <%= link_to "Sign up", new_user_registration_path, class:"logsign-btn btn rounded-pill", style:"margin-left: 10px"%>
        </div>
    </div>
<% end %>

