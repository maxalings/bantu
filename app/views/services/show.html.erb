
<div class="align-content-center d-flex justify-content-center align-items-start mt-5 h-100">
  <div class="d-flex flex-column p-4">
    <h1 class="p-1"><%= @service.title %></h1>
    <div class="border border-secondary rounded p-5">
      <h4 class="text-capitalize"> Category > <%= @service.category %></h4>
      <p>Price: <%= @service.price %> $</p>
      <p class="fst-italic">Description: <%= @service.description %></p>
       <h4 class="p-1 m-1"><%= @service.user.email %></h4>
    </div>
      <button class="btn btn-secondary mt-4"><%= "Back to services" %></button>
  </div>
<div class="d-flex flex-column p-4">
  <h2>Interest about this service ?</h2>
  <h4>write a short description of your need and fill the options below</h3>
<%= simple_form_for([@service, @request]) do |f| %>
  <%= f.input :description, as: :text, label: "type a description of your needs here", input_html: { rows: 10, cols: 50 } %>
 <div>
  <%= f.submit "Send request", class:"btn btn-success" %>
 </div>
<% end %>
</div>
</div>