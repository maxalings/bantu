<h3>Your Requests</h3>

<% @user.requests.each do |request| %>
  <div class="request-card">
    <h4><%= request.title %></h4>
    <p><%= request.description %></p>
    <p><strong>Status:</strong> <%= request.status.capitalize %></p>

    <%= simple_form_for(request) do |f| %>
      <div class="form-group">
        <%= f.input :status, collection: ['pending', 'upcoming', 'finished'], selected: request.status, label: 'Status', input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :description, as: :text, label: 'Update Description', input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Request', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <hr>
  </div>
<% end %>