<div class="container my-5 py-4 px-4 border rounded-3 shadow-sm bg-light text-center">
  <!-- GitHub Profile Picture -->
  <div class="mb-4">
    <img
      src="https://github.com/sugihenson.png"
      class="rounded-circle shadow-sm"
      alt="<%= @worker.first_name %> <%= @worker.last_name %>'s profile picture"
      width="150"
      height="150">
  </div>

  <!-- Worker Details -->
  <h1 class="text-primary mb-3">
    <%= @worker.first_name %> <%= @worker.last_name %>
  </h1>

  <div class="mb-3">
    <p>
      <strong>Phone Number:</strong>
      <% if @show_number %>
        <span class="text-muted" style="filter: blur(4px);"><%= @worker.phone_number %></span>
      <% else %>
        <span class="text-muted"><%= @worker.phone_number %></span>
      <% end %>
    </p>
    <p>
      <strong>Email:</strong>
      <span class="text-muted"><%= @worker.email %></span>
    </p>
  </div>

  <!-- Services Provided -->
  <h4 class="text-secondary mt-4 mb-3"><strong>Services Provided</strong></h4>
  <div class="row g-4">
    <% @worker.services.each do |service| %>
      <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100 worker-service-card">
          <div class="card-body d-flex justify-content-center align-items-center">
            <p class="card-title text-secondary m-0">
              <%= link_to service.title, service_path(service), class: "text-decoration-none text-dark" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Back Button -->
  <div class="mt-4">
    <%= link_to "Back", request.referrer || root_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
